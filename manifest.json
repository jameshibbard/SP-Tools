{
  "manifest_version": 2,

  "name": "SP Tools",
  "description": "A Chrome extension to help with various SitePoint editing tasks",
  "version": "0.16.2",

  "background": {
    "scripts": [
      "lib/jquery-2.1.1.min.js",
      "scripts/utils/utilities.js",
      "scripts/background.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_popup": "fragments/popup.html"
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "https://api.parsely.com/"
  ],

  "content_scripts": [
    {
      "matches": [ "*://*.sitepoint.com/*" ],
      "js": [
        "lib/jquery-2.1.1.min.js",
        "scripts/utils/utilities.js",
        "lib/moment.min.js",
        "scripts/main-site/article.js",
        "scripts/main-site/channels.js",
        "scripts/main.js"
      ],
      "css": [ "css/styles.css" ],
      "run_at": "document_idle"
    },
    {
      "matches": [ "https://www.sitepoint.com/wp-admin/*" ],
      "css": [ "css/styles.css" ],
      "run_at": "document_idle"
    },
    {
      "matches": [ "https://www.sitepoint.com/wp-admin/post*" ],
      "js": [
        "lib/jquery.datetimepicker.js",
        "lib/showdown.min.js",
        "lib/handlebars-4.0.5.min.js",
        "lib/beautify.min.js",
        "lib/beautify-css.min.js",
        "lib/beautify-html.min.js",
        "scripts/utils/capitalize.js",
        "scripts/utils/modal.js",
        "scripts/wordpress/modules/validators.js",
        "scripts/wordpress/modules/editorToolbar.js",
        "scripts/wordpress/modules/titleArea.js",
        "scripts/wordpress/modules/editorPane.js",
        "scripts/wordpress/modules/publishWidget.js",
        "scripts/wordpress/modules/tagsWidget.js",
        "scripts/wordpress/modules/seriesWidget.js",
        "scripts/wordpress/modules/syntaxHighlightingWidget.js",
        "scripts/wordpress/modules/postPage.js",
        "scripts/wordpress/newPostPage.js"
      ],
      "css": [ "css/jquery.datetimepicker.css" ],
      "run_at": "document_idle"
    },
    {
      "matches": [ "https://sitepointdotcom.createsend.com/campaigns/content/edit/*" ],
      "js": [
        "lib/jquery-2.1.1.min.js",
        "lib/showdown.min.js",
        "scripts/campaign-monitor/edit.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [ "https://sitepointdotcom.createsend.com/campaigns/gallery/step2/*" ],
      "js": [
        "lib/jquery-2.1.1.min.js",
        "scripts/campaign-monitor/plain-text.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [ "*://*/*" ],
      "js": [
        "lib/jquery-2.1.1.min.js",
        "scripts/utils/utilities.js",
        "scripts/main.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "options_page": "fancy-settings/source/index.html",
  "web_accessible_resources": [
    "fragments/*",
    "scripts/main-site/article.js"
  ]
}
